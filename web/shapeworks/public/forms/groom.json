{
    "id": "groom",
    "type": "object",
    "description": "TODO: Grooming description",
    "properties": {
        "section_1": {
            "title": "Image Grooming Options",
            "type": "object",
            "properties": {
                "resample": {
                    "type": "boolean",
                    "default": true,
                    "title": "Resample"
                },
                "isotropic": {
                    "type": "boolean",
                    "default": true,
                    "title": "Isotropic",
                    "x-display": "custom-conditional",
                    "x-display-if": "(model) => model.section_1.resample"
                },
                "iso_spacing": {
                    "type": "number",
                    "default": 0.625,
                    "title": "XYZ",
                    "x-display": "custom-conditional",
                    "x-display-if": "(model) => model.section_1.resample && model.section_1.isotropic"
                },
                "anisotropic_x": {
                    "type": "number",
                    "default": 0.625,
                    "title": "X",
                    "x-display": "custom-conditional",
                    "x-display-if": "(model) => model.section_1.resample && !model.section_1.isotropic"
                },
                "anisotropic_y": {
                    "type": "number",
                    "default": 0.625,
                    "title": "Y",
                    "x-display": "custom-conditional",
                    "x-display-if": "(model) => model.section_1.resample && !model.section_1.isotropic"
                },
                "anisotropic_z": {
                    "type": "number",
                    "default": 2.5,
                    "title": "Z",
                    "x-display": "custom-conditional",
                    "x-display-if": "(model) => model.section_1.resample && !model.section_1.isotropic"
                },
                "pad": {
                    "type": "boolean",
                    "default": true,
                    "title": "Pad",
                    "x-cols": 6
                },
                "pad_value": {
                    "type": "integer",
                    "default": 10,
                    "title": "Amount",
                    "x-cols": 6,
                    "x-display": "custom-conditional",
                    "x-display-if": "(model) => model.section_1.pad"
                },
                "antialias": {
                    "type": "boolean",
                    "default": true,
                    "title": "Antialias",
                    "x-cols": 6
                },
                "antialias_amount": {
                    "type": "integer",
                    "default": 10,
                    "title": "Iterations",
                    "x-cols": 6,
                    "x-display": "custom-conditional",
                    "x-display-if": "(model) => model.section_1.antialias"
                },
                "blur": {
                    "type": "boolean",
                    "default": true,
                    "title": "Blur",
                    "x-cols": 6
                },
                "blur_sigma": {
                    "type": "number",
                    "default": 2.00,
                    "title": "Sigma",
                    "x-cols": 6,
                    "x-display": "custom-conditional",
                    "x-display-if": "(model) => model.section_1.blur"
                },
                "isolate": {
                    "type": "boolean",
                    "default": true,
                    "title": "Isolate"
                },
                "fill_holes": {
                    "type": "boolean",
                    "default": true,
                    "title": "Fill Holes"
                },
                "crop": {
                    "type": "boolean",
                    "default": true,
                    "title": "Crop"
                },
                "fastmarching": {
                    "type": "boolean",
                    "default": true,
                    "title": "Distance Transform"
                },
                "groom_output_prefix": {
                    "type": "string",
                    "default": "groomed",
                    "title": "Output prefix",
                    "x-display": "custom-conditional",
                    "x-display-if": "(model) => false"
                }
            }
        },
        "section_2": {
            "title": "Mesh Grooming",
            "type": "object",
            "properties": {
                "convert_to_mesh": {
                    "type": "boolean",
                    "default": false,
                    "title": "Convert to mesh"
                },
                "fill_mesh_holes": {
                    "type": "boolean",
                    "default": true,
                    "title": "Fill Holes",
                    "x-display": "custom-conditional",
                    "x-display-if": "(model) => model.section_2.convert_to_mesh"
                },
                "mesh_smooth": {
                    "type": "boolean",
                    "default": true,
                    "title": "Smooth",
                    "x-display": "custom-conditional",
                    "x-display-if": "(model) => model.section_2.convert_to_mesh"
                },
                "mesh_smoothing_method": {
                    "type": "string",
                    "enum": [
                        "Laplacian",
                        "WindowedSinc"
                    ],
                    "default": "Laplacian",
                    "title": "Smoothing Method",
                    "x-display": "custom-conditional",
                    "x-display-if": "(model) => model.section_2.convert_to_mesh && model.section_2.mesh_smooth"
                },
                "mesh_smoothing_vtk_laplacian_iterations": {
                    "type": "integer",
                    "default": 10,
                    "title": "Iterations",
                    "x-display": "custom-conditional",
                    "x-display-if": "(model) => model.section_2.convert_to_mesh && model.section_2.mesh_smoothing_method === 'Laplacian'",
                    "x-cols": 6
                },
                "mesh_smoothing_vtk_laplacian_relaxation": {
                    "type": "integer",
                    "default": 1,
                    "title": "Relaxation",
                    "x-display": "custom-conditional",
                    "x-display-if": "(model) => model.section_2.convert_to_mesh && model.section_2.mesh_smoothing_method === 'Laplacian'",
                    "x-cols": 6
                },
                "mesh_smoothing_vtk_windowed_sinc_iterations": {
                    "type": "integer",
                    "default": 10,
                    "title": "Iterations",
                    "x-display": "custom-conditional",
                    "x-display-if": "(model) => model.section_2.convert_to_mesh && model.section_2.mesh_smoothing_method === 'WindowedSinc'",
                    "x-cols": 6
                },
                "mesh_smoothing_vtk_windowed_sinc_passband": {
                    "type": "number",
                    "default": 0.05,
                    "title": "Pass Band",
                    "x-display": "custom-conditional",
                    "x-display-if": "(model) => model.section_2.convert_to_mesh && model.section_2.mesh_smoothing_method === 'WindowedSinc'",
                    "x-cols": 6
                },
                "remesh": {
                    "type": "boolean",
                    "default": true,
                    "title": "Remesh",
                    "x-display": "custom-conditional",
                    "x-display-if": "(model) => model.section_2.convert_to_mesh",
                    "x-cols": 6
                },
                "remesh_percent_mode": {
                    "type": "boolean",
                    "default": true,
                    "title": "Use percentage",
                    "x-display": "custom-conditional",
                    "x-display-if": "(model) => model.section_2.convert_to_mesh && model.section_2.remesh",
                    "x-cols": 6
                },
                "remesh_percent": {
                    "type": "number",
                    "default": 75.0,
                    "title": "Number of vertices",
                    "x-display": "custom-conditional",
                    "x-display-if": "(model) => model.section_2.convert_to_mesh && model.section_2.remesh && model.section_2.remesh_percent_mode"
                },
                "remesh_num_vertices": {
                    "type": "integer",
                    "default": 3000,
                    "title": "Number of vertices",
                    "x-display": "custom-conditional",
                    "x-display-if": "(model) => model.section_2.convert_to_mesh && model.section_2.remesh && !model.section_2.remesh_percent_mode"
                },
                "remesh_gradation": {
                    "type": "number",
                    "default": 1,
                    "title": "Adaptivity",
                    "x-display": "custom-conditional",
                    "x-display-if": "(model) => model.section_2.convert_to_mesh && model.section_2.remesh"
                }
            }
        },
        "section_3": {
            "title": "Alignment Options",
            "type": "object",
            "properties": {
                "reflect": {
                    "type": "boolean",
                    "default": false,
                    "title": "Reflect"
                },
                "reflect_column": {
                    "type": "string",
                    "enum": [
                        "shape_1", "groomed_1", "alignment_1",
                        "procrustes_1", "local_particles_1", "world_particles_1"
                    ],
                    "default": "shape_1",
                    "x-cols": 6,
                    "x-display": "custom-conditional",
                    "x-display-if":"(model) => model.section_2.reflect"
                },
                "reflect_axis": {
                    "type": "string",
                    "enum": [
                        "X", "Y", "Z"
                    ],
                    "default": "X",
                    "x-cols": 6,
                    "x-display": "custom-conditional",
                    "x-display-if":"(model) => model.section_2.reflect"
                },
                "alignment_enabled": {
                    "type": "boolean",
                    "default": true,
                    "title": "Alignment",
                    "x-cols": 6
                },
                "alignment_method": {
                    "type": "string",
                    "default": "Center",
                    "title": "Align",
                    "x-cols": 6,
                    "enum": [
                        "Center",
                        "Iterative Closest Point"
                    ],
                    "x-display": "custom-conditional",
                    "x-display-if": "(model) => model.section_2.alignment"
                }
            }
        }
    }
}
