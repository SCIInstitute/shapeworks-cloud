{
    "id": "groom",
    "type": "object",
    "description": "TODO: Grooming description",
    "properties": {
        "section_1": {
            "title": "Image Grooming Options",
            "type": "object",
            "properties": {
                "isotropic": {
                    "type": "boolean",
                    "default": true,
                    "title": "Isotropic"
                },
                "isotropic_xyz": {
                    "type": "number",
                    "default": 0.625,
                    "title": "XYZ",
                    "x-display": "custom-conditional",
                    "x-display-if": "(model) => model.section_1.isotropic"
                },
                "anisotropic_x": {
                    "type": "number",
                    "default": 0.625,
                    "title": "X",
                    "x-display": "custom-conditional",
                    "x-display-if": "(model) => !model.section_1.isotropic"
                },
                "anisotropic_y": {
                    "type": "number",
                    "default": 0.625,
                    "title": "Y",
                    "x-display": "custom-conditional",
                    "x-display-if": "(model) => !model.section_1.isotropic"
                },
                "anisotropic_z": {
                    "type": "number",
                    "default": 2.5,
                    "title": "Z",
                    "x-display": "custom-conditional",
                    "x-display-if": "(model) => !model.section_1.isotropic"
                },
                "pad": {
                    "type": "boolean",
                    "default": true,
                    "title": "Pad",
                    "x-cols": 6
                },
                "pad_amount": {
                    "type": "integer",
                    "default": 10,
                    "title": "Amount",
                    "x-cols": 6,
                    "x-display": "custom-conditional",
                    "x-display-if": "(model) => model.section_1.pad"
                },
                "antialias": {
                    "type": "boolean",
                    "default": true,
                    "title": "Antialias",
                    "x-cols": 6
                },
                "antialias_iterations": {
                    "type": "integer",
                    "default": 10,
                    "title": "Iterations",
                    "x-cols": 6,
                    "x-display": "custom-conditional",
                    "x-display-if": "(model) => model.section_1.antialias"
                },
                "blur": {
                    "type": "boolean",
                    "default": true,
                    "title": "Blur",
                    "x-cols": 6
                },
                "blur_sigma": {
                    "type": "number",
                    "default": 2.00,
                    "title": "Sigma",
                    "x-cols": 6,
                    "x-display": "custom-conditional",
                    "x-display-if": "(model) => model.section_1.blur"
                },
                "isolate": {
                    "type": "boolean",
                    "default": true,
                    "title": "Isolate"
                },
                "fill_holes": {
                    "type": "boolean",
                    "default": true,
                    "title": "Fill Holes"
                },
                "crop": {
                    "type": "boolean",
                    "default": true,
                    "title": "Crop"
                },
                "resample": {
                    "type": "boolean",
                    "default": true,
                    "title": "Resample"
                },
                "distance_transform": {
                    "type": "boolean",
                    "default": true,
                    "title": "Distance Transform"
                },
                "convert_to_mesh": {
                    "type": "boolean",
                    "default": false,
                    "title": "Convert to mesh"
                }
            }
        },
        "section_2": {
            "title": "Alignment Options",
            "type": "object",
            "properties": {
                "reflect": {
                    "type": "boolean",
                    "default": false,
                    "title": "Reflect"
                },
                "alignment": {
                    "type": "boolean",
                    "default": true,
                    "title": "Alignment",
                    "x-cols": 6
                },
                "align_selection": {
                    "type": "string",
                    "default": "Center",
                    "title": "Align",
                    "x-cols": 6,
                    "enum": [
                        "Center",
                        "Iterative Closest Point"
                    ],
                    "x-display": "custom-conditional",
                    "x-display-if": "(model) => model.section_2.alignment"
                }
            }
        }
    }
}
