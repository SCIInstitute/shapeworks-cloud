{
    "id": "analyze",
    "type": "object",
    "description": "Examine the generated outputs and metrics",
    "properties": {
        "view": {
            "type": "string",
            "title": "View",
            "default": "PCA",
            "x-display": "custom-readonly"
        },
        "group": {
            "type": "object",
            "x-display": "custom-conditional",
            "x-display-if": "(model) => model.view === 'Group'",
            "properties": {
                "overall_mean": {
                    "type": "boolean",
                    "title": "Overall mean",
                    "default": false,
                    "description": "Display overall mean shape"
                }
            }
        },
        "samples": {
            "type": "object",
            "x-display": "custom-conditional",
            "x-display-if": "(model) => model.view === 'Samples'",
            "properties": {
                "selection": {
                    "type": "string",
                    "enum": [
                        "All samples",
                        "Single sample",
                        "Median"
                    ],
                    "default": "All samples",
                    "x-cols": 6,
                    "x-display": "radio",
                    "title": "Sample selection",
                    "description": "All samples: Show all samples\nSingle sample: show a single sample\nMedian: Show median sample"
                }
            }
        },
        "pca": {
            "type": "object",
            "x-display": "custom-conditional",
            "x-display-if": "(model) => model.view === 'PCA'",
            "properties": {
                "std_dev": {
                    "type": "number",
                    "title": "Standard deviation",
                    "default": 0,
                    "minimum": -2,
                    "maximum": 2,
                    "step": 0.1,
                    "x-display": "slider"
                },
                "animate": {
                    "type": "boolean",
                    "title": "Animate",
                    "default": false,
                    "description": "Standard deviation animation"
                },
                "lambda": {
                    "type": "number",
                    "title": "Lambda",
                    "default": -30,
                    "x-display": "custom-readonly"
                },
                "mode": {
                    "type": "integer",
                    "title": "Mode",
                    "default": 1,
                    "minimum": 1
                },
                "eigenvalue": {
                    "type": "number",
                    "title": "Eigenvalue",
                    "default": 1500,
                    "x-display": "custom-readonly"
                },
                "explained_variance": {
                    "type": "number",
                    "title": "Explained variance",
                    "default": 30,
                    "minimum": 0,
                    "maximum": 100,
                    "x-display": "custom-readonly",
                    "x-display-append": "%"
                },
                "cumulative_variance": {
                    "type": "number",
                    "title": "Cumulative variance",
                    "default": 30,
                    "minimum": 0,
                    "maximum": 100,
                    "x-display": "custom-readonly",
                    "x-display-append": "%"
                }
            }
        }
    }
}
