{
    "id": "analyze",
    "type": "object",
    "description": "TODO: Analyze description",
    "properties": {
        "section_1": {
            "title": "View parameters",
            "type": "object",
            "properties": {
                "view": {
                    "type": "string",
                    "title": "View",
                    "default": "Group",
                    "enum": [
                        "Group",
                        "Samples",
                        "PCA"
                    ]
                },
                "group": {
                    "type": "object",
                    "x-display": "custom-conditional",
                    "x-display-if": "(model) => model.section_1.view === 'Group'",
                    "properties": {
                        "overall_mean": {
                            "type": "boolean",
                            "title": "Overall mean",
                            "default": false
                        }
                    }
                },
                "samples": {
                    "type": "object",
                    "x-display": "custom-conditional",
                    "x-display-if": "(model) => model.section_1.view === 'Samples'",
                    "properties": {
                        "selection": {
                            "type": "string",
                            "enum": [
                                "All samples",
                                "Single sample"
                            ],
                            "default": "All samples",
                            "x-cols": 6,
                            "x-display": "radio",
                            "title": "Sample selection"
                        }
                    }
                },
                "pca": {
                    "type": "object",
                    "x-display": "custom-conditional",
                    "x-display-if": "(model) => model.section_1.view === 'PCA'",
                    "properties": {
                        "std_dev": {
                            "type": "number",
                            "title": "Standard deviation",
                            "default": 0,
                            "minimum": -2,
                            "maximum": 2,
                            "step": 0.1,
                            "x-display": "slider"
                        },
                        "animate": {
                            "type": "boolean",
                            "title": "Animate",
                            "default": false
                        },
                        "lambda": {
                            "type": "number",
                            "title": "Lambda",
                            "default": -30,
                            "x-display": "custom-readonly"
                        },
                        "mode": {
                            "type": "integer",
                            "title": "Mode",
                            "default": 1,
                            "minimum": 1
                        },
                        "eigenvalue": {
                            "type": "number",
                            "title": "Eigenvalue",
                            "default": 1500,
                            "x-display": "custom-readonly"
                        },
                        "explained_variance": {
                            "type": "number",
                            "title": "Explained variance",
                            "default": 30,
                            "minimum": 0,
                            "maximum": 100,
                            "x-display": "custom-readonly",
                            "x-display-append": "%"
                        },
                        "cumulative_variance": {
                            "type": "number",
                            "title": "Cumulative variance",
                            "default": 30,
                            "minimum": 0,
                            "maximum": 100,
                            "x-display": "custom-readonly",
                            "x-display-append": "%"
                        }
                    }
                }
            }
        },
        "section_2": {
            "title": "Surface reconstruction",
            "type": "object",
            "properties": {
                "method": {
                    "type": "string",
                    "title": "Method",
                    "default": "Mesh warping based",
                    "enum": [
                      "Legacy",
                      "Mesh warping based",
                      "Distance transform based"
                    ],
                    "x-display": "radio"
                  }
            }
        }
    }
}
